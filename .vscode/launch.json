{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "code professional --autosave",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pinocchio/cmd/pinocchio",
            "args": [
                "code",
                "professional",
                "--autosave",
                "enabled:yes",
                "hello"
            ]
        },
        {
            "name": "code professional hello",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pinocchio/cmd/pinocchio",
            "args": [
                "code",
                "professional",
                "hello"
            ]
        },
        {
            "name": "Pinocchio Create Commit Message",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pinocchio/cmd/pinocchio",
            "args": [
                "code",
                "create-commit-message",
                "--diff",
                "<",
                "${workspaceFolder}/pinocchio/README.md"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Debug Current Directory",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "console": "integratedTerminal"
        },
        {
            "name": "UI Experiment",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pinocchio/cmd/experiments/ui",
            "args": [
                "--ui"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Tool UI Experiment",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pinocchio/cmd/experiments/tool-ui",
            "args": [
                "--ui",
                "--log-file",
                "/tmp/tool-ui.log",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Faker Generator Process",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go-go-labs/cmd/faker-generator",
            "args": [
                "process",
                "--input-file",
                "${workspaceFolder}/go-go-labs/cmd/faker-generator/examples/01-simple.yaml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Glaze",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/glazed/cmd/glaze/main.go",
            "args": [
                "json",
                "-"
            ],
            "cwd": "${workspaceFolder}/glazed/cmd/glaze",
        }
    ]
}